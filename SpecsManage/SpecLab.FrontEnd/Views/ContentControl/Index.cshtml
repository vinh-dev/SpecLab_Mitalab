@{
    ViewBag.Title = "Quản lý nội dung";
}

@section style {
    @Styles.Render("~/Content/content_control")
}

@section scripts {
    @Scripts.Render("~/Scripts/ckeditor/ckeditor.js", 
        "~/Scripts/ckeditor/config.js", 
        "~/Scripts/pages/content_control.js")
}

<script type="text/javascript">

    window.contentIds = {
        homePageContentId: "@SpecLab.FrontEnd.WebUtils.HomePageContentId",
    };
    
    window.saveContentUrl = "@Url.Action("SaveContent", "ContentControl")";
    window.getContentDetailUrl = "@Url.Action("GetContent", "ContentControl")";
</script>

<div id="mainContentDisplay" class="col-md-10" ng-app="myApp" ng-controller="ContentControlController">
    <div class="panel-group" id="collapseHomeContent">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapseHomeContent_Search">
                        Nội dung trang chủ
                    </a>
                </h4>
            </div>
            <div id="collapseHomeContent_Search" class="panel-collapse collapse in">
                <div class="panel-body">

                    <div class="row control-buttons">
                        <button type="button" class="btn btn-warning" ng-click="updateContent()" >Update thông báo</button>
                    </div>

                    <textarea id="txtContent" rows="5" cols="80">
                        {{homePageContent}}
                    </textarea>
                </div>
            </div>
        </div>
    </div>
</div>